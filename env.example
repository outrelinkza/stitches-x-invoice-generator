# Stitches X Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ===========================================
# STRIPE CONFIGURATION (REQUIRED)
# ===========================================
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Price IDs (create these in your Stripe dashboard)
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID=price_your-basic-plan-id
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_your-pro-plan-id
NEXT_PUBLIC_STRIPE_PER_INVOICE_PRICE_ID=price_your-per-invoice-id

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# For contact forms and notifications
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Stitches X

# ===========================================
# SECURITY CONFIGURATION (REQUIRED)
# ===========================================
# Generate a random secret for NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# APPLICATION CONFIGURATION (OPTIONAL)
# ===========================================
# App settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Stitches X

# ===========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ===========================================
# For monitoring and analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# ===========================================
# BACKUP & STORAGE (OPTIONAL)
# ===========================================
# For file storage and backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# ===========================================
# RATE LIMITING (OPTIONAL)
# ===========================================
# For API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DATABASE CONFIGURATION (OPTIONAL)
# ===========================================
# If using additional database
DATABASE_URL=postgresql://user:password@localhost:5432/stitches_x
REDIS_URL=redis://localhost:6379

# ===========================================
# DEVELOPMENT CONFIGURATION (OPTIONAL)
# ===========================================
# Development settings
DEBUG=true
VERBOSE_LOGGING=false
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false

# ===========================================
# PRODUCTION CONFIGURATION (REQUIRED FOR PROD)
# ===========================================
# Production settings
# NODE_ENV=production
# NEXTAUTH_URL=https://yourdomain.com
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
